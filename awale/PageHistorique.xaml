<Page x:Class="awale.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:awale"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Title="Historique"
      Background="White" Width="462.264">

    <Grid>
        <ListView HorizontalAlignment="Left" Height="232" Margin="10,10,0,0" VerticalAlignment="Top" Width="442" x:Name="ListViewParties">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Joueur 1" Width="100" DisplayMemberBinding="{Binding Path=joueur1.nom}"/>
                    <GridViewColumn Header="Score 1" Width="150" DisplayMemberBinding="{Binding Path=joueur1.score}"/>
                    <GridViewColumn Header="Joueur 2" Width="100" DisplayMemberBinding="{Binding Path=joueur2.nom}"/>
                    <GridViewColumn Header="Score 2" Width="150" DisplayMemberBinding="{Binding Path=joueur2.score}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Quitter" HorizontalAlignment="Left" Margin="366,260,0,0" VerticalAlignment="Top" Width="86" Height="23" Click="Button_Click"/>

    </Grid>
</Page>
